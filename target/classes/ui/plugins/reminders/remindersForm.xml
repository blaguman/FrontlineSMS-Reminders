<?xml version="1.0" encoding="UTF-8"?>
<dialog name="dialogReminderForm" icon="/icons/reminders.png" text="Reminder" modal="true" resizable="true" closable="true" close="removeDialog(this)" bottom="10" top="10" left="10" right="10" columns="3" gap="13">
    <label name="labelDate" icon="/icons/time.png" text="i18n.common.date" valign="top"/>
    <panel name="panelDate" colspan="2" columns="5" gap="10">
        <combobox name="comboHour" editable="false" weightx="1" weighty="1"></combobox>
		<combobox name="comboMinute" editable="false" weightx="1" weighty="1"></combobox>
		<combobox name="comboAmPm" editable="false" weightx="1" weighty="1"></combobox>
		<textfield name="textDate" columns="30" weightx="1" weighty="1" editable="false"/>
        <button name="buttonDate" action="showDateSelecter(textDate)" icon="/icons/date.png"/>
    </panel>   

    <label name="labelRecipients" icon="/icons/user.png" text="i18n.common.recipient" valign="top"/>
    <panel name="panelRecipients" border="false" colspan="2" weightx="1" weighty="1" columns="1" gap="10">
	    <table name="tableRecipients" selection="multiple" weightx="1" weighty="1">
	        <header>
	        	<column icon="/icons/user.png" text="i18n.common.name" width="150"/>
	            <column icon="/icons/phone_number.png" text="i18n.common.phone.number" width="150"/>
	            <column icon="/icons/email.png" text="i18n.common.email.address" width="150"/>
	        </header>
	    </table>
    </panel>
    
    <label name="labelType" icon="/icons/file.png" text="i18n.common.type" valign="top"/>
    <checkbox name="checkboxEmail" action="typeChanged(this, textSubject, textMessage)" group="groupType" halign="center" selected="true" text="i18n.common.email" icon="/icons/email.png"/>
    <checkbox name="checkboxMessage" action="typeChanged(this, textSubject, textMessage)" group="groupType" text="i18n.common.message" icon="/icons/sms.png"/>
    
    <label name="labelSubject" icon="/icons/email_subject.png" text="i18n.common.subject" valign="top"/>
    <textarea name="textSubject" colspan="2" rows="1" columns="75"/>
    
    <label name="labelMessage" icon="/icons/message.png" text="i18n.common.message" valign="top"/>
    <textarea name="textMessage" colspan="2" rows="7" columns="75"/>
    
    <label name="labelInfo" valign="top" colspan="3"/>
    
    <panel name="panelButtons" gap="5" colspan="3">
	    <button name="buttonSave" action="createReminder(dialogReminderForm,tableRecipients,textDate,comboHour,comboMinute,comboAmPm,checkboxEmail,textSubject,textMessage)" icon="/icons/tick.png" text="i18n.action.save" weightx="1" weighty="1"/>
	    <button name="buttonCancel" action="removeDialog(dialogReminderForm)" icon="/icons/cross.png" text="i18n.action.cancel" weightx="1" weighty="1"/>
    </panel>
</dialog>
